@model IEnumerable<StudManage1.Models.company>
@using StudManage1.Models

@{
    ViewBag.Title = "companies";
}

<h2>Companies</h2>

<style>
    div.w3-col {
        display: flex;
        padding: 25px;
        text-align: center;
        align-content: center
    }

    img {
        width: 80px;
        height: 90px;
        align-content: center
    }

    a.option {
        border: 0px hidden gray;
        /*border-style: groove;*/
        margin: 10px;
        transition: transform .2s;
        color: blue;
        position: center;
        padding-bottom: 0px;
        align-content: center;
        background-image: url(https://cdn-icons-png.flaticon.com/512/15/15659.png);
    }

    a:hover {
        transform: scale(1.3);
    }
</style>

@foreach (company company in Model)
{

    <div class="w3-col l3 s6">
        <a class="option">
            @Html.ActionLink(company.cname, "Students", "Placement", new { compid = company.cid }, null)

        </a>
    </div>
}







